[Unit]
Description=FlashMQ MQTT server
After=network.target

[Service]
Type=notify
User=root
Group=root
LimitNOFILE=infinity
ExecStart=/usr/bin/flashmq --config-file /etc/flashmq/flashmq.conf
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure
RestartSec=5s
TimeoutSec=300

[Install]
WantedBy=multi-user.target
